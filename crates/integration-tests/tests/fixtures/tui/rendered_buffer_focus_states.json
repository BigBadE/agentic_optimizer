{
  "name": "Rendered Buffer Focus State Changes",
  "description": "Tests that focus changes are correctly reflected in rendered buffer through border styling",
  "tags": [
    "tui",
    "ui",
    "rendering",
    "focus"
  ],
  "setup": {
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Create a task",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Create a task",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Task created';",
          "}"
        ]
      },
      "verify": {
        "execution": {},
        "ui": {
          "focused_pane": "input"
        }
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Tab"
      },
      "verify": {
        "ui": {
          "focused_pane": "output"
        }
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Tab"
      },
      "verify": {
        "ui": {
          "focused_pane": "input"
        }
      }
    }
  ],
  "final_verify": {
    "ui": {
      "focused_pane": "input"
    }
  }
}
