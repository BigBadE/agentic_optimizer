{
  "name": "Metrics: Recording Verification",
  "description": "Verifies that metrics are recorded for task execution",
  "tags": [
    "metrics",
    "tracking"
  ],
  "setup": {
    "files": {},
    "env_vars": {
      "MERLIN_FOLDER": "__temp__"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Hello world",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {
          "metrics_recorded": true
        }
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  return 'Hello! How can I help you?';",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {
      "metrics_recorded": true
    }
  }
}
