{
  "name": "TUI Escape Key Test",
  "description": "Verifies that the TUI handles escape key properly",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "user_input",
        "data": {
          "text": "Some text to clear",
          "submit": false
        }
      },
      "expectations": {
        "ui_state": {
          "input_text": "Some text"
        }
      }
    },
    {
      "step": 2,
      "action": {
        "type": "key_press",
        "data": {
          "key": "escape"
        }
      },
      "expectations": {}
    },
    {
      "step": 3,
      "action": {
        "type": "wait",
        "data": {
          "duration_ms": 50
        }
      },
      "expectations": {}
    }
  ]
}
