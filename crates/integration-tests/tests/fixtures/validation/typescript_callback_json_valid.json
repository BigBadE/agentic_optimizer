{
  "name": "TypeScript Callback - JSON Valid",
  "description": "Test TypeScript callback that validates JSON syntax",
  "tags": [
    "validation",
    "typescript_callback",
    "exit_requirement",
    "json_check"
  ],
  "setup": {
    "files": {},
    "terminal_size": [
      120,
      40
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Create valid JSON config",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "files": [
          {
            "path": "settings.json",
            "exists": true
          }
        ]
      },
      "strategy": {
        "type": "sequence",
        "responses": [
          {
            "typescript": [
              "async function agent_code(): Promise<any> {",
              "  return {",
              "    title: 'Create valid JSON config',",
              "    steps: [",
              "      {",
              "        title: 'Create JSON file',",
              "        description: 'Write settings.json with valid JSON',",
              "        step_type: 'implementation',",
              "        exit_requirement: async () => {",
              "          const content = await readFile('settings.json');",
              "          try {",
              "            JSON.parse(content);",
              "          } catch (e) {",
              "            throw new Error(`Invalid JSON: ${e.message}`);",
              "          }",
              "        }",
              "      }",
              "    ]",
              "  };",
              "}"
            ]
          },
          {
            "typescript": [
              "async function agent_code(): Promise<string> {",
              "  const settings = { theme: 'dark', fontSize: 14, autoSave: true };",
              "  await writeFile('settings.json', JSON.stringify(settings, null, 2));",
              "  return 'Created settings.json';",
              "}"
            ]
          }
        ]
      }
    }
  ],
  "final_verify": {
    "files": [
      {
        "path": "settings.json",
        "exists": true,
        "contains": [
          "theme",
          "dark"
        ]
      }
    ]
  }
}
