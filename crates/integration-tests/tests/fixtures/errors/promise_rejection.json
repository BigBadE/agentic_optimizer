{
  "name": "Error: Promise Rejection",
  "description": "Tests handling of promise rejections in TypeScript runtime",
  "tags": [
    "errors",
    "typescript",
    "promises",
    "edge-cases"
  ],
  "setup": {
    "files": {},
    "env_vars": {
      "MERLIN_FOLDER": "__temp__"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Test promise rejection",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {
          "expected_failure": "Promise rejected"
        }
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  throw new Error('Intentional promise rejection');",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {
      "expected_failure": "Promise rejected"
    }
  }
}
