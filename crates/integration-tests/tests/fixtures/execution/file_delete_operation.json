{
  "name": "File Delete Operation",
  "description": "Tests file deletion through agent execution",
  "tags": [
    "execution",
    "file-ops",
    "delete"
  ],
  "setup": {
    "files": {
      "temp.txt": "Temporary file content",
      "keep.txt": "Keep this file"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Delete the temporary file",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Delete",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  await deleteFile('temp.txt');",
          "  return 'Deleted temp.txt';",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Deleted temp.txt"
          ]
        },
        "files": [
          {
            "path": "temp.txt",
            "exists": false
          },
          {
            "path": "keep.txt",
            "exists": true,
            "contains": [
              "Keep this file"
            ]
          }
        ],
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "files": [
      {
        "path": "temp.txt",
        "exists": false
      },
      {
        "path": "keep.txt",
        "exists": true
      }
    ]
  }
}
