{
  "name": "Context with Multiple File Types",
  "description": "Tests context building with various file types and extensions",
  "tags": [
    "context",
    "file-types",
    "mixed"
  ],
  "setup": {
    "files": {
      "main.rs": "fn main() { println!(\"Hello\"); }",
      "config.json": "{\"setting\": \"value\"}",
      "README.md": "# Project Documentation",
      "script.sh": "#!/bin/bash\necho 'test'",
      "data.txt": "Plain text data"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Analyze all project files",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Analyze",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const files = await listFiles('.');",
          "  return `Found ${files.length} files of various types`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "files",
            "types"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    }
  }
}
