{
  "name": "Syntax Validation Pass",
  "description": "Tests that valid code passes syntax validation",
  "tags": [
    "validation",
    "syntax"
  ],
  "setup": {
    "files": {
      "src/main.rs": "fn main() { println!(\"Hello\"); }"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Check syntax",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "valid"
          ]
        },
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  const content = await readFile('src/main.rs');",
            "  return `Syntax looks valid: ${content.substring(0, 20)}`;",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {}
  }
}