{
  "name": "File Write and Read Operations",
  "description": "Test file writing and reading to exercise file operation paths",
  "tags": ["execution", "file_ops", "workspace"],
  "setup": {
    "files": {},
    "terminal_size": [120, 40]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Create a config file and read it back",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Create a config file",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const config = { host: 'localhost', port: 8080 };",
          "  await writeFile('config.json', JSON.stringify(config, null, 2));",
          "  const content = await readFile('config.json');",
          "  const parsed = JSON.parse(content);",
          "  return `Created config.json with host=${parsed.host} and port=${parsed.port}`;",
          "}"
        ]
      },
      "verify": {
        "files": [
          {
            "path": "config.json",
            "exists": true,
            "contains": ["localhost", "8080"]
          }
        ],
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "files": [
      {
        "path": "config.json",
        "exists": true
      }
    ]
  }
}
