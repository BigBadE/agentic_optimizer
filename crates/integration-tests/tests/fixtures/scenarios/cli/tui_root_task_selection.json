{
  "name": "TUI Root Task Selection",
  "description": "Tests navigation and selection between multiple root conversation tasks",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "root-1",
          "description": "First root conversation"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      }
    },
    {
      "step": 2,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_completed",
          "task_id": "root-1",
          "result": "First conversation complete"
        }
      },
      "expectations": {}
    },
    {
      "step": 3,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "root-2",
          "description": "Second root conversation"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 2
        }
      }
    },
    {
      "step": 4,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_output",
          "task_id": "root-2",
          "text": "Output from second conversation"
        }
      },
      "expectations": {}
    },
    {
      "step": 5,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "root-3",
          "description": "Third root conversation"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 3
        }
      }
    },
    {
      "step": 6,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+t"
        }
      },
      "expectations": {
        "ui_state": {
          "focused_pane": "tasks"
        }
      }
    },
    {
      "step": 7,
      "action": {
        "type": "key_press",
        "data": {
          "key": "up"
        }
      },
      "expectations": {}
    },
    {
      "step": 8,
      "action": {
        "type": "key_press",
        "data": {
          "key": "down"
        }
      },
      "expectations": {}
    },
    {
      "step": 9,
      "action": {
        "type": "key_press",
        "data": {
          "key": "enter"
        }
      },
      "expectations": {}
    },
    {
      "step": 10,
      "action": {
        "type": "key_press",
        "data": {
          "key": "tab"
        }
      },
      "expectations": {
        "ui_state": {
          "focused_pane": "input"
        }
      }
    }
  ]
}
