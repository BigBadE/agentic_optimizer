{
  "name": "Rendered Buffer Border Verification",
  "description": "Tests that UI borders and pane titles are correctly rendered",
  "tags": [
    "tui",
    "ui",
    "rendering",
    "borders"
  ],
  "setup": {
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "",
        "submit": false
      },
      "verify": {
        "ui": {
          "focused_pane": "input",
          "rendered_buffer_contains": [
            "─── Input",
            "─── Tasks"
          ]
        }
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "First task",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "First task",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Task completed successfully';",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "rendered_buffer_contains": [
            "─── Tasks",
            "─── Input",
            "First task"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "ui": {
      "tasks_displayed": 1,
      "rendered_buffer_contains": [
        "─── Tasks",
        "─── Input"
      ]
    }
  }
}
