{
  "name": "TUI Theme Cycling",
  "description": "Tests Ctrl+P theme switching through all available themes",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "wait",
        "data": {
          "duration_ms": 50
        }
      },
      "expectations": {
        "ui_state": {
          "theme": "TokyoNight"
        }
      }
    },
    {
      "step": 2,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+p"
        }
      },
      "expectations": {
        "ui_state": {
          "theme": "Catppuccin"
        }
      }
    },
    {
      "step": 3,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+p"
        }
      },
      "expectations": {
        "ui_state": {
          "theme": "Monochrome"
        }
      }
    },
    {
      "step": 4,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+p"
        }
      },
      "expectations": {
        "ui_state": {
          "theme": "Nord"
        }
      }
    },
    {
      "step": 5,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+p"
        }
      },
      "expectations": {
        "ui_state": {
          "theme": "Dracula"
        }
      }
    },
    {
      "step": 6,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+p"
        }
      },
      "expectations": {
        "ui_state": {
          "theme": "Gruvbox"
        }
      }
    },
    {
      "step": 7,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+p"
        }
      },
      "expectations": {
        "ui_state": {
          "theme": "TokyoNight"
        }
      }
    }
  ]
}
