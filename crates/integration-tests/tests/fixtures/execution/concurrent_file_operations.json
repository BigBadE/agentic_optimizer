{
  "name": "Concurrent File Operations",
  "description": "Tests multiple file operations in single task execution",
  "tags": [
    "execution",
    "concurrency",
    "file-ops"
  ],
  "setup": {
    "files": {
      "a.txt": "Content A",
      "b.txt": "Content B",
      "c.txt": "Content C"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Read all files concurrently",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Content A",
            "Content B",
            "Content C"
          ]
        },
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  const results = await Promise.all([",
            "    readFile('a.txt'),",
            "    readFile('b.txt'),",
            "    readFile('c.txt')",
            "  ]);",
            "  return results.join(', ');",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 1
    }
  }
}