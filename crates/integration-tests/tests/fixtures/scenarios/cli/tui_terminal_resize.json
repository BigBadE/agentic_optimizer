{
  "name": "TUI Terminal Resize",
  "description": "Tests TUI behavior with multiple events and focus changes",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "task-resize-1",
          "description": "Running tests..."
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      }
    },
    {
      "step": 2,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_output",
          "task_id": "task-resize-1",
          "output": "Test output line 1\nTest output line 2\nTest output line 3"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      }
    },
    {
      "step": 3,
      "action": {
        "type": "key_press",
        "data": {
          "key": "tab"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1,
          "focused_pane": "output"
        }
      }
    },
    {
      "step": 4,
      "action": {
        "type": "key_press",
        "data": {
          "key": "tab"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1,
          "focused_pane": "input"
        }
      }
    },
    {
      "step": 5,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_completed",
          "task_id": "task-resize-1",
          "result": "Tests passed"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      }
    }
  ]
}
