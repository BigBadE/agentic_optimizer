{
  "name": "Show Tool Output Formatting",
  "description": "Tests show tool output formatting and presentation",
  "tags": [
    "tools",
    "show",
    "formatting"
  ],
  "setup": {
    "files": {
      "display.txt": "Line 1\nLine 2\nLine 3\nLine 4\nLine 5"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Display file contents",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Display",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const content = await readFile('display.txt');",
          "  const lines = content.split('\\n');",
          "  return `File has ${lines.length} lines:\\n${content}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "5 lines",
            "Line 1",
            "Line 5"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    }
  }
}
