{
  "name": "Simple Response Test",
  "description": "Tests basic agent response without any tools or task lists",
  "tags": [
    "basic",
    "simple"
  ],
  "setup": {
    "files": {},
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "What is 2 + 2?",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "What is 2 \\+ 2",
        "match_type": "regex"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return '2 + 2 = 4';",
          "}"
        ]
      },
      "verify": {
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    }
  }
}