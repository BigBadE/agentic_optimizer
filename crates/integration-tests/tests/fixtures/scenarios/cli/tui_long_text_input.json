{
  "name": "TUI Long Text Input",
  "description": "Tests handling of very long text input that wraps multiple lines",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "user_input",
        "data": {
          "text": "This is a very long line of text that should wrap across multiple terminal columns and test the input handling capabilities of the TUI system to ensure it can handle extended input without issues",
          "submit": false
        }
      },
      "expectations": {
        "ui_state": {
          "input_text": "This is a very long"
        }
      }
    },
    {
      "step": 2,
      "action": {
        "type": "key_press",
        "data": {
          "key": "home"
        }
      },
      "expectations": {}
    },
    {
      "step": 3,
      "action": {
        "type": "key_press",
        "data": {
          "key": "end"
        }
      },
      "expectations": {}
    },
    {
      "step": 4,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Alt+enter"
        }
      },
      "expectations": {}
    },
    {
      "step": 5,
      "action": {
        "type": "user_input",
        "data": {
          "text": "And here is another line with some more content that also needs to be tested for proper wrapping and display",
          "submit": false
        }
      },
      "expectations": {}
    },
    {
      "step": 6,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+a"
        }
      },
      "expectations": {}
    },
    {
      "step": 7,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+u"
        }
      },
      "expectations": {}
    },
    {
      "step": 8,
      "action": {
        "type": "user_input",
        "data": {
          "text": "Short text",
          "submit": true
        }
      },
      "expectations": {}
    },
    {
      "step": 9,
      "action": {
        "type": "wait",
        "data": {
          "duration_ms": 100
        }
      },
      "expectations": {}
    }
  ]
}
