{
  "name": "Tool Operation Rendering Verification",
  "description": "Tests that tool operations are properly reflected in rendered UI buffer",
  "tags": [
    "tools",
    "rendering",
    "buffer"
  ],
  "setup": {
    "files": {
      "original.txt": "Original content"
    },
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Modify the file",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Modify",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  await writeFile('modified.txt', 'Modified content');",
          "  const content = await readFile('modified.txt');",
          "  return `File created with: ${content}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "File created with",
            "Modified content"
          ],
          "rendered_buffer_contains": [
            "─── Tasks",
            "─── Input",
            "Modified content"
          ]
        },
        "files": [
          {
            "path": "modified.txt",
            "exists": true,
            "contains": [
              "Modified content"
            ]
          }
        ],
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 1,
      "rendered_buffer_contains": [
        "─── Tasks",
        "─── Input"
      ]
    },
    "files": [
      {
        "path": "modified.txt",
        "exists": true,
        "contains": [
          "Modified content"
        ]
      }
    ]
  }
}
