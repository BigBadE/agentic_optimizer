{
  "name": "Rendered Buffer Thread List Basic",
  "description": "Tests that task execution and UI rendering work correctly",
  "tags": [
    "tui",
    "ui",
    "rendering",
    "tasks"
  ],
  "setup": {
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "First task",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "First task",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Task one complete';",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "rendered_buffer_contains": [
            "─── Tasks",
            "─── Input"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 1,
      "rendered_buffer_contains": [
        "─── Tasks",
        "─── Input"
      ]
    }
  }
}
