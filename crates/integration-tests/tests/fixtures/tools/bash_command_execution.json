{
  "name": "Bash Command Execution Through Agent",
  "description": "Tests bash tool integration for executing shell commands",
  "tags": [
    "tools",
    "bash",
    "commands"
  ],
  "setup": {
    "files": {
      "script.sh": "echo 'Hello from script'"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "List directory contents",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "List",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const files = await listFiles('.');",
          "  return `Files: ${files.join(', ')}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Files:",
            "script.sh"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    },
    "ui": {
      "all_tasks_completed": true
    }
  }
}
