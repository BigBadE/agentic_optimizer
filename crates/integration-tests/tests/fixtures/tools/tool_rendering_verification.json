{
  "name": "Tool Operation Rendering Verification",
  "description": "Tests that tool operations are properly reflected in rendered UI buffer",
  "tags": [
    "tools",
    "rendering",
    "buffer"
  ],
  "setup": {
    "files": {
      "original.txt": "Original content"
    },
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Modify the file",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "File created with",
            "Modified content"
          ],
          "rendered_buffer_contains": [
            "\u2500\u2500\u2500 Tasks",
            "\u2500\u2500\u2500 Input",
            "Modified content"
          ]
        },
        "files": [
          {
            "path": "modified.txt",
            "exists": true,
            "contains": [
              "Modified content"
            ]
          }
        ],
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "Modify",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  await writeFile('modified.txt', 'Modified content');",
            "  const content = await readFile('modified.txt');",
            "  return `File created with: ${content}`;",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 1,
      "rendered_buffer_contains": [
        "\u2500\u2500\u2500 Tasks",
        "\u2500\u2500\u2500 Input"
      ]
    },
    "files": [
      {
        "path": "modified.txt",
        "exists": true,
        "contains": [
          "Modified content"
        ]
      }
    ]
  }
}
