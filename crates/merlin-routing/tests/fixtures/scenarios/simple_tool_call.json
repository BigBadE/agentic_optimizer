{
  "name": "Simple Tool Call",
  "description": "Agent reads a file and responds with its content",
  "initial_task": {
    "description": "Read the config.json file and tell me what's in it"
  },
  "mock_tool_outputs": {
    "read_file": {
      "args": {"path": "config.json"},
      "output": {
        "success": true,
        "message": "File read successfully",
        "data": "{\"name\": \"test-app\", \"version\": \"1.0.0\", \"debug\": true}"
      }
    }
  },
  "mock_responses": [
    {
      "step": 1,
      "trigger": "task_start",
      "response": {
        "text": "I'll read the config.json file for you.\n\nLet me use the read_file tool to get its contents.",
        "tool_calls": [
          {
            "tool": "read_file",
            "args": {
              "path": "config.json"
            }
          }
        ]
      }
    },
    {
      "step": 2,
      "trigger": "tool_result",
      "tool": "read_file",
      "response": {
        "text": "The config.json file contains the following:\n\n```json\n{\n  \"name\": \"test-app\",\n  \"version\": \"1.0.0\",\n  \"debug\": true\n}\n```\n\nThis is a configuration file for a test application with debug mode enabled.",
        "tool_calls": []
      }
    }
  ],
  "expected_ui_states": [
    {
      "after_step": 1,
      "task_tree": [
        {
          "id": "task_1",
          "description": "Read the config.json file and tell me what's in it",
          "status": "running",
          "children": []
        }
      ],
      "active_task": "task_1",
      "tool_calls": [
        {
          "tool": "read_file",
          "status": "pending",
          "args": {"path": "config.json"}
        }
      ]
    },
    {
      "after_step": 2,
      "task_tree": [
        {
          "id": "task_1",
          "description": "Read the config.json file and tell me what's in it",
          "status": "completed",
          "children": []
        }
      ],
      "active_task": null,
      "tool_calls": [
        {
          "tool": "read_file",
          "status": "completed",
          "args": {"path": "config.json"}
        }
      ]
    }
  ]
}
