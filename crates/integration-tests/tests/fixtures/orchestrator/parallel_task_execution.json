{
  "name": "Parallel Task Execution",
  "description": "Tests that independent tasks can execute in parallel without conflicts",
  "tags": [
    "orchestrator",
    "parallel",
    "concurrency"
  ],
  "setup": {
    "files": {
      "file1.txt": "Content 1",
      "file2.txt": "Content 2",
      "file3.txt": "Content 3"
    },
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Process all three files",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Process all",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const c1 = await readFile('file1.txt');",
          "  const c2 = await readFile('file2.txt');",
          "  const c3 = await readFile('file3.txt');",
          "  return `Processed: ${c1}, ${c2}, ${c3}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Processed",
            "Content 1",
            "Content 2",
            "Content 3"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 1
    }
  }
}
