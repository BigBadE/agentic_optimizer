{
  "name": "Task Priority and Ordering",
  "description": "Tests task execution ordering and sequencing",
  "tags": [
    "orchestrator",
    "priority",
    "ordering"
  ],
  "setup": {
    "files": {
      "order.txt": "Initial"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Execute ordered operations",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "ordered",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const step1 = await readFile('order.txt');",
          "  await writeFile('order.txt', step1 + ' -> Step1');",
          "  const step2 = await readFile('order.txt');",
          "  await writeFile('order.txt', step2 + ' -> Step2');",
          "  const final = await readFile('order.txt');",
          "  return `Final: ${final}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Final:",
            "Initial",
            "Step1",
            "Step2"
          ]
        },
        "files": [
          {
            "path": "order.txt",
            "exists": true,
            "contains": [
              "Initial",
              "Step1",
              "Step2"
            ]
          }
        ],
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    }
  }
}
