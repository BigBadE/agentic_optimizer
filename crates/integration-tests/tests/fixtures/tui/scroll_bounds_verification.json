{
  "name": "Scroll Bounds Verification",
  "description": "Tests scroll behavior in output pane with long content, verifying scroll position and bounds",
  "tags": [
    "tui",
    "scroll",
    "output",
    "rendered_buffer"
  ],
  "setup": {
    "files": {},
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Generate 50 lines of output",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {},
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Line 1",
            "Line 50"
          ]
        }
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  let output = '';",
            "  for (let i = 1; i <= 50; i++) {",
            "    output += `Line ${i}\\n`;",
            "  }",
            "  return output;",
            "}"
          ]
        }
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Tab"
      },
      "verify": {
        "ui": {
          "focused_pane": "output"
        }
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 1,
      "output_contains": [
        "Line "
      ]
    }
  }
}