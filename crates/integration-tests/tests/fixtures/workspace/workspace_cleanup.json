{
  "name": "Workspace Cleanup After Task",
  "description": "Tests that workspace is properly cleaned up after task completion",
  "tags": [
    "workspace",
    "cleanup",
    "isolation"
  ],
  "setup": {
    "files": {
      "input.txt": "Input data"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Process input file",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Process",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const data = await readFile('input.txt');",
          "  await writeFile('output.txt', `Processed: ${data}`);",
          "  return 'Processing complete';",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "complete"
          ]
        },
        "files": [
          {
            "path": "output.txt",
            "exists": true,
            "contains": [
              "Processed:",
              "Input data"
            ]
          }
        ],
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    },
    "files": [
      {
        "path": "input.txt",
        "exists": true
      },
      {
        "path": "output.txt",
        "exists": true
      }
    ]
  }
}
