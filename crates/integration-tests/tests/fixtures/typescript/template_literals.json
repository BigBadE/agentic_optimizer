{
  "name": "TypeScript Template Literals and String Interpolation",
  "description": "Tests template literal syntax and multi-line strings",
  "tags": [
    "typescript",
    "strings",
    "templates"
  ],
  "setup": {
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Test template literals",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "template",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const name = 'TypeScript';",
          "  const version = 5;",
          "  const message = `Language: ${name}, Version: ${version}`;",
          "  const multiline = `Line 1\\nLine 2\\nLine 3`;",
          "  return `${message} | Lines: ${multiline.split('\\n').length}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Language: TypeScript",
            "Version: 5",
            "Lines: 3"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {}
  }
}
