{
  "name": "Navigation Task Selection",
  "description": "Tests keyboard navigation through task list with up/down arrows",
  "tags": [
    "tui",
    "navigation",
    "keyboard"
  ],
  "setup": {
    "files": {
      "data.txt": "Test data"
    },
    "terminal_size": [
      80,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "First task",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "First",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Task 1 complete';",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1
        },
        "execution": {}
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Second task",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Second",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Task 2 complete';",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 2
        },
        "execution": {}
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Tab"
      }
    }
  ],
  "final_verify": {
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 2
    }
  }
}
