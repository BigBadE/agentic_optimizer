{
  "name": "Rendered Buffer Output with Long Content",
  "description": "Tests that long task output is properly handled in rendered buffer",
  "tags": [
    "tui",
    "ui",
    "rendering",
    "scroll"
  ],
  "setup": {
    "files": {
      "test.txt": "Test data"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Generate long output",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Line 1",
            "Line 20"
          ],
          "rendered_buffer_contains": [
            "\u2500\u2500\u2500 Tasks",
            "\u2500\u2500\u2500 Input"
          ]
        },
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "Generate long output",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  let output = 'Line 1\\n';",
            "  for (let i = 2; i <= 20; i++) {",
            "    output += `Line ${i}\\n`;",
            "  }",
            "  return output;",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 1,
      "rendered_buffer_contains": [
        "\u2500\u2500\u2500 Tasks",
        "\u2500\u2500\u2500 Input"
      ]
    }
  }
}
