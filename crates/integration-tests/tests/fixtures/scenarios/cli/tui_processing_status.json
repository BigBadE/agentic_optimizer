{
  "name": "TUI Processing Status",
  "description": "Tests task descriptions and progress tracking",
  "steps": [
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "task-status-1",
          "description": "Processing large file..."
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      },
      "step": 1
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_progress",
          "task_id": "task-status-1",
          "progress": 50
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      },
      "step": 2
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_completed",
          "task_id": "task-status-1",
          "result": "File processed successfully"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      },
      "step": 3
    }
  ],
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [
      80,
      24
    ]
  }
}
