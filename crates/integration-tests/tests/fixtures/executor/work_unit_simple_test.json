{
  "name": "WorkUnit Simple Test",
  "description": "Minimal test to verify WorkUnit creation and verification",
  "tags": ["executor", "work_unit", "threads"],
  "setup": {
    "files": {},
    "terminal_size": [120, 40]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Do a simple task",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Do a simple task",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<any> {",
          "  return {",
          "    title: 'Simple Task',",
          "    steps: [",
          "      {title: 'Step 1', description: 'First step', step_type: 'implementation', dependencies: []}",
          "    ]",
          "  };",
          "}"
        ]
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "First step",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Done';",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "work_unit": {
            "exists": true
          }
        }
      }
    }
  ],
  "final_verify": {
    "ui": {
      "work_unit": {
        "exists": true,
        "status": "completed",
        "subtask_count": 1,
        "progress_percentage": 100,
        "is_terminal": true,
        "tier_used": "test-mock",
        "subtask_titles": ["Step 1"]
      }
    }
  }
}
