{
  "name": "Task Expansion and Navigation",
  "description": "Tests expanding/collapsing tasks with steps using Enter key in task pane",
  "tags": [
    "tui",
    "navigation",
    "task_tree",
    "keyboard"
  ],
  "setup": {
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Create a multi-step task",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "multi-step",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "interface TaskList {",
          "  steps: Array<{",
          "    description: string;",
          "    exit_requirements?: Array<{",
          "      type: 'callback';",
          "      callback: string;",
          "      args?: Record<string, any>;",
          "    }>;",
          "  }>;",
          "}",
          "",
          "async function agent_code(): Promise<TaskList> {",
          "  return {",
          "    steps: [",
          "      {",
          "        description: 'Step 1: Initialize',",
          "        exit_requirements: [{",
          "          type: 'callback',",
          "          callback: 'always_pass'",
          "        }]",
          "      },",
          "      {",
          "        description: 'Step 2: Process',",
          "        exit_requirements: [{",
          "          type: 'callback',",
          "          callback: 'always_pass'",
          "        }]",
          "      },",
          "      {",
          "        description: 'Step 3: Finalize',",
          "        exit_requirements: [{",
          "          type: 'callback',",
          "          callback: 'always_pass'",
          "        }]",
          "      }",
          "    ]",
          "  };",
          "}"
        ]
      },
      "verify": {
        "execution": {},
        "ui": {
          "tasks_displayed": 1
        }
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Step 1",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Step 1 completed';",
          "}"
        ]
      },
      "verify": {
        "execution": {},
        "ui": {}
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Step 2",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Step 2 completed';",
          "}"
        ]
      },
      "verify": {
        "execution": {},
        "ui": {}
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Step 3",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Step 3 completed';",
          "}"
        ]
      },
      "verify": {
        "execution": {},
        "ui": {}
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "t",
        "modifiers": ["ctrl"]
      },
      "verify": {
        "ui": {
          "focused_pane": "tasks"
        }
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Enter"
      },
      "verify": {
        "ui": {
          "task_tree_expanded": true
        }
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Down"
      },
      "verify": {
        "ui": {}
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Up"
      },
      "verify": {
        "ui": {}
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Enter"
      },
      "verify": {
        "ui": {}
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "ui": {
      "all_tasks_completed": true
    }
  }
}
