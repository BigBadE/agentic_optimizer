{
  "name": "Vector Cache With Progress",
  "description": "Tests embedding cache progress indicator in UI",
  "config": {
    "terminal_size": [100, 30],
    "enable_vector_cache": true,
    "mock_embedding_speed": 10
  },
  "initial_state": {
    "workspace_files": [
      {"path": "src/main.rs", "content": "fn main() { println!(\"Hello\"); }"},
      {"path": "src/lib.rs", "content": "pub fn test() {}"},
      {"path": "src/utils.rs", "content": "pub fn helper() {}"}
    ],
    "vector_cache_state": "empty"
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "user_input",
        "data": {
          "text": "Analyze the codebase",
          "submit": true
        }
      },
      "expectations": {}
    },
    {
      "step": 2,
      "action": {
        "type": "agent_response",
        "data": {
          "text": "I'll analyze the codebase for you.",
          "tool_calls": [],
          "subtasks": []
        }
      },
      "expectations": {}
    },
    {
      "step": 3,
      "action": {
        "type": "background_event",
        "data": {
          "event_type": "embedding_progress",
          "progress": 2,
          "total": 3
        }
      },
      "expectations": {
        "background_tasks": {
          "embedding_cache": {
            "status": "running",
            "progress": 2,
            "total": 3
          }
        },
        "ui_state": {
          "snapshot": "vector_cache_with_progress.txt"
        }
      }
    }
  ]
}
