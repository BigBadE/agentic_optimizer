{
  "name": "TUI Channel Disconnection",
  "description": "Tests TUI behavior when event channel experiences issues",
  "steps": [
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "task-channel-1",
          "description": "Normal operation"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      },
      "step": 1
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_output",
          "task_id": "task-channel-1",
          "output": "Processing..."
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      },
      "step": 2
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_completed",
          "task_id": "task-channel-1",
          "result": "Completed successfully"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      },
      "step": 3
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "task-channel-2",
          "description": "Second task after reconnection"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 2
        }
      },
      "step": 4
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_completed",
          "task_id": "task-channel-2",
          "result": "Also completed"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 2
        }
      },
      "step": 5
    }
  ],
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [
      80,
      24
    ]
  }
}
