{
  "name": "Multi-Stage Validation Pipeline",
  "description": "Tests validation pipeline with multiple sequential stages",
  "tags": [
    "validation",
    "pipeline",
    "stages"
  ],
  "setup": {
    "files": {
      "validate.txt": "Valid content"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Validate content through pipeline",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Validate",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const content = await readFile('validate.txt');",
          "  const stage1 = content.length > 0;",
          "  const stage2 = content.includes('Valid');",
          "  const stage3 = !content.includes('Invalid');",
          "  return `Validation: Stage1=${stage1}, Stage2=${stage2}, Stage3=${stage3}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Stage1=true",
            "Stage2=true",
            "Stage3=true"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    }
  }
}
