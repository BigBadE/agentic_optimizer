{
  "name": "TypeScript Conditional Logic",
  "description": "Tests if-else statements and conditional expressions",
  "tags": [
    "typescript",
    "conditionals",
    "logic"
  ],
  "setup": {
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Test conditional logic",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "conditional",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const value = 42;",
          "  const result = value > 40 ? 'greater' : 'less';",
          "  if (value === 42) {",
          "    return `Value is ${value}, result: ${result}`;",
          "  }",
          "  return 'unexpected';",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Value is 42",
            "result: greater"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {}
  }
}
