{
  "name": "Conversation File Reference Tracking",
  "description": "Tests that files mentioned in conversation history are tracked and included in context",
  "tags": [
    "context",
    "conversation",
    "file-tracking"
  ],
  "setup": {
    "files": {
      "src/main.rs": "fn main() {}",
      "src/lib.rs": "pub mod utils;",
      "src/utils.rs": "pub fn helper() {}"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Check src/main.rs for issues",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  const mainContent = await readFile('src/main.rs');",
            "  const libContent = await readFile('src/lib.rs');",
            "  return 'I found an issue in src/lib.rs - it references utils but the module is missing';",
            "}"
          ]
        }
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Fix both files",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "files": [
          {
            "path": "src/main.rs",
            "exists": true,
            "contains": [
              "mod lib",
              "lib::utils::helper"
            ]
          },
          {
            "path": "src/lib.rs",
            "exists": true,
            "contains": [
              "pub mod utils"
            ]
          }
        ],
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  await writeFile('src/main.rs', 'mod lib;\\nfn main() { lib::utils::helper(); }');",
            "  await writeFile('src/lib.rs', 'pub mod utils;');",
            "  return 'Fixed both src/main.rs and src/lib.rs';",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "files": [
      {
        "path": "src/main.rs",
        "exists": true,
        "contains": [
          "mod lib"
        ]
      },
      {
        "path": "src/lib.rs",
        "exists": true,
        "contains": [
          "pub mod utils"
        ]
      }
    ]
  }
}