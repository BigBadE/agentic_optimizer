{
  "name": "TUI Conversation History",
  "description": "Tests conversation history extraction from parent-child task relationships",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "root-conv-1",
          "description": "Root conversation task"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      }
    },
    {
      "step": 2,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_output",
          "task_id": "root-conv-1",
          "text": "User: What is the weather?"
        }
      },
      "expectations": {}
    },
    {
      "step": 3,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_completed",
          "task_id": "root-conv-1",
          "result": "Assistant: I'll check the weather for you."
        }
      },
      "expectations": {}
    },
    {
      "step": 4,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "child-conv-1",
          "description": "Follow-up question",
          "parent_id": "root-conv-1"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 2
        }
      }
    },
    {
      "step": 5,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_output",
          "task_id": "child-conv-1",
          "text": "User: What about tomorrow?"
        }
      },
      "expectations": {}
    },
    {
      "step": 6,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_completed",
          "task_id": "child-conv-1",
          "result": "Assistant: Tomorrow will be sunny."
        }
      },
      "expectations": {}
    },
    {
      "step": 7,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "child-conv-2",
          "description": "Another follow-up",
          "parent_id": "root-conv-1"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 3
        }
      }
    },
    {
      "step": 8,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_completed",
          "task_id": "child-conv-2",
          "result": "Completed follow-up"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 3
        }
      }
    }
  ]
}
