{
  "name": "Rendered Buffer Task Status Indicators",
  "description": "Tests that task status (running, completed, failed) is reflected in rendered buffer",
  "tags": [
    "tui",
    "ui",
    "rendering",
    "status"
  ],
  "setup": {
    "files": {
      "test.txt": "Test content"
    },
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Complete a task successfully",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Complete a task",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Success!';",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "task_status": "completed",
          "output_contains": [
            "Success!"
          ],
          "rendered_buffer_contains": [
            "─── Tasks",
            "Success!",
            "─── Input"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 1,
      "rendered_buffer_contains": [
        "─── Tasks",
        "─── Input"
      ]
    }
  }
}
