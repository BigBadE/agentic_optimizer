{
  "name": "TUI Focus Toggle",
  "description": "Tests Ctrl+T and Tab key pane focus switching",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "test-task-1",
          "description": "Test task for focus switching"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1,
          "focused_pane": "input"
        }
      }
    },
    {
      "step": 2,
      "action": {
        "type": "key_press",
        "data": {
          "key": "tab"
        }
      },
      "expectations": {
        "ui_state": {
          "focused_pane": "output"
        }
      }
    },
    {
      "step": 3,
      "action": {
        "type": "key_press",
        "data": {
          "key": "tab"
        }
      },
      "expectations": {
        "ui_state": {
          "focused_pane": "input"
        }
      }
    },
    {
      "step": 4,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+t"
        }
      },
      "expectations": {
        "ui_state": {
          "focused_pane": "tasks"
        }
      }
    },
    {
      "step": 5,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+t"
        }
      },
      "expectations": {
        "ui_state": {
          "focused_pane": "input"
        }
      }
    },
    {
      "step": 6,
      "action": {
        "type": "key_press",
        "data": {
          "key": "tab"
        }
      },
      "expectations": {
        "ui_state": {
          "focused_pane": "output"
        }
      }
    },
    {
      "step": 7,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+t"
        }
      },
      "expectations": {
        "ui_state": {
          "focused_pane": "tasks"
        }
      }
    }
  ]
}
