{
  "name": "Bash Tool Try/Catch Still Works for Real Errors",
  "description": "Tests that try/catch still catches actual JavaScript errors (not tool failures)",
  "tags": [
    "tools",
    "bash",
    "error-handling"
  ],
  "setup": {
    "files": {},
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Test bash try/catch for real errors",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Test",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const result = await bash('echo test');",
          "  return `Got result with exit code ${result.exit_code}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Got result with exit code 0"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "ui": {
      "all_tasks_completed": true
    }
  }
}
