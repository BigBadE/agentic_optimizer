{
  "name": "File Size Limits and Large Files",
  "description": "Tests handling of files with varying sizes",
  "tags": [
    "execution",
    "file-ops",
    "size"
  ],
  "setup": {
    "files": {
      "small.txt": "Small",
      "medium.txt": "This is a medium sized file with multiple lines of text.\nLine 2\nLine 3\nLine 4\nLine 5"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Read and compare file sizes",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "compare",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const small = await readFile('small.txt');",
          "  const medium = await readFile('medium.txt');",
          "  return `Small: ${small.length} bytes, Medium: ${medium.length} bytes`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "bytes"
          ]
        },
        "files": [
          {
            "path": "small.txt",
            "exists": true,
            "size_lt": 100
          },
          {
            "path": "medium.txt",
            "exists": true,
            "size_gt": 50
          }
        ],
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    }
  }
}
