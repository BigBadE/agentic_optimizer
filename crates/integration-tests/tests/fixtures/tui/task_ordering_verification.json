{
  "name": "Task Ordering Verification",
  "description": "Tests that tasks appear in correct chronological order in the rendered Tasks pane",
  "tags": [
    "tui",
    "ordering",
    "rendered_buffer"
  ],
  "setup": {
    "files": {},
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "First task at time 0",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {},
        "ui": {
          "tasks_displayed": 1,
          "rendered_buffer_contains": [
            "First task at time 0"
          ]
        }
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "First task",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  return 'First task completed';",
            "}"
          ]
        }
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Second task at time 1",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {},
        "ui": {
          "tasks_displayed": 2,
          "rendered_buffer_contains": [
            "Second task at time 1"
          ]
        }
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "Second task",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  return 'Second task completed';",
            "}"
          ]
        }
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Third task at time 2",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {},
        "ui": {
          "tasks_displayed": 3,
          "rendered_buffer_contains": [
            "Third task at time 2"
          ]
        }
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "Third task",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  return 'Third task completed';",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 3,
      "rendered_buffer_contains": [
        "Third task at time 2"
      ]
    }
  }
}
