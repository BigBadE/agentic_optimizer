{
  "name": "TypeScript Code Extraction",
  "description": "Tests extraction of TypeScript code blocks from LLM responses with various formatting",
  "tags": [
    "typescript",
    "extraction",
    "parsing"
  ],
  "setup": {
    "files": {},
    "env_vars": {},
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Execute a simple task",
        "submit": true
      },
      "verify": {}
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {
          "return_type": "object"
        }
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "simple task",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "return { done: true, result: \"Success\" };"
          ]
        }
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Calculate something with explanation",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {
          "return_type": "object"
        }
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "Calculate something",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "const x = 1 + 1;",
            "return { done: true, result: `Result is ${x}` };"
          ]
        }
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Test multiple approaches",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {
          "return_type": "object"
        }
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "multiple approaches",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "return { done: true, result: \"First\" };"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {}
  }
}
