{
  "name": "Promise Rejection Handling",
  "description": "Tests that promise rejections are properly caught and reported",
  "tags": [
    "typescript",
    "error-handling",
    "promises"
  ],
  "setup": {
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Execute code that rejects",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Execute",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  await Promise.reject(new Error('Test error'));",
          "  return 'Should not reach here';",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1
        },
        "execution": {
          "expected_failure": "Test error"
        }
      }
    }
  ],
  "final_verify": {
    "ui": {
      "tasks_displayed": 1
    }
  }
}
