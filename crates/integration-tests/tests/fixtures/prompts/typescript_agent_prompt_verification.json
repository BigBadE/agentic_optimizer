{
  "name": "TypeScript Agent Prompt Verification",
  "description": "Verifies the typescript_agent prompt contains tool signatures and correct structure",
  "tags": [
    "prompts",
    "typescript-agent",
    "tool-signatures"
  ],
  "setup": {
    "files": {},
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Use bash to list files",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "coding assistant",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const result = await bash('ls');",
          "  return result.stdout;",
          "}"
        ]
      },
      "verify": {
        "prompt": {
          "prompt_file": "typescript_agent",
          "contains": [
            "AVAILABLE TOOLS",
            "agent_code",
            "TypeScript"
          ],
          "not_contains": [
            "JSON.stringify"
          ],
          "has_tool_signatures": [
            "bash"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {}
  }
}
