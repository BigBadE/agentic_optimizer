{
  "name": "Routing: Tier Selection Verification",
  "description": "Verifies that routing decisions are tracked in metrics",
  "tags": [
    "routing",
    "tier-selection",
    "metrics"
  ],
  "setup": {
    "files": {},
    "env_vars": {
      "MERLIN_FOLDER": "__temp__"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "What is 2 + 2?",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {
          "model_used": "Qwen 2.5 Coder 32B",
          "metrics_recorded": true
        }
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  return '2 + 2 = 4';",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {
      "metrics_recorded": true
    }
  }
}
