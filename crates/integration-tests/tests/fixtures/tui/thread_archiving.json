{
  "name": "Thread Archiving and Restoration",
  "description": "Tests archiving and unarchiving conversation threads",
  "tags": [
    "tui",
    "threads",
    "archive"
  ],
  "setup": {
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Create thread to archive",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "archive",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Thread created and ready for archiving';",
          "}"
        ]
      },
      "verify": {
        "execution": {},
        "ui": {
          "tasks_displayed": 1,
          "thread_count": 1
        }
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "ui": {
      "all_tasks_completed": true
    }
  }
}
