{
  "name": "TUI Multiline Input Test",
  "description": "Verifies that the TUI can handle multiline input with Alt+Enter",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "user_input",
        "data": {
          "text": "Line 1",
          "submit": false
        }
      },
      "expectations": {}
    },
    {
      "step": 2,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Alt+Enter"
        }
      },
      "expectations": {}
    },
    {
      "step": 3,
      "action": {
        "type": "user_input",
        "data": {
          "text": "Line 2",
          "submit": false
        }
      },
      "expectations": {
        "ui_state": {
          "input_text": "Line"
        }
      }
    }
  ]
}
