{
  "name": "File Read and Modify",
  "description": "Tests reading existing files and modifying them",
  "tags": [
    "file_ops",
    "read",
    "modify"
  ],
  "setup": {
    "files": {
      "data.json": "{\"count\": 0, \"name\": \"test\"}"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Increment the count in data.json",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Increment the count",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const content = await readFile('data.json');",
          "  const data = JSON.parse(content);",
          "  data.count += 1;",
          "  await writeFile('data.json', JSON.stringify(data, null, 2));",
          "  return `Incremented count to ${data.count}`;",
          "}"
        ]
      },
      "verify": {
        "files": [
          {
            "path": "data.json",
            "exists": true,
            "contains": [
              "\"count\": 1",
              "\"name\": \"test\""
            ]
          }
        ],
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    },
    "files": [
      {
        "path": "data.json",
        "exists": true,
        "contains": [
          "\"count\": 1"
        ]
      }
    ]
  }
}