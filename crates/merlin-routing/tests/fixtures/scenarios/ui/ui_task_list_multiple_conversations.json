{
  "name": "Task List Shows Only Most Recent Conversation",
  "description": "Tests that when multiple completed conversations exist, only the most recent is shown",
  "config": {
    "terminal_size": [100, 30],
    "enable_vector_cache": false
  },
  "initial_state": {
    "workspace_files": [],
    "existing_tasks": [
      {"description": "First conversation", "status": "Completed"},
      {"description": "Second conversation", "status": "Completed"},
      {"description": "Third conversation", "status": "Completed"}
    ],
    "vector_cache_state": "complete"
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "wait",
        "data": {"duration_ms": 100}
      },
      "expectations": {
        "ui_state": {
          "snapshot": "ui_task_list_multiple_conversations.txt",
          "visible_tasks": [
            {"description": "Third conversation", "status": "Completed"}
          ]
        }
      }
    }
  ]
}
