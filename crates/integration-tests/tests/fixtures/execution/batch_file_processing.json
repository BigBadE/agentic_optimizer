{
  "name": "Batch File Processing",
  "description": "Tests processing multiple files in batch operations",
  "tags": [
    "execution",
    "batch",
    "files"
  ],
  "setup": {
    "files": {
      "batch1.txt": "Content 1",
      "batch2.txt": "Content 2",
      "batch3.txt": "Content 3",
      "batch4.txt": "Content 4",
      "batch5.txt": "Content 5"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Process all batch files",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "batch",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const files = ['batch1.txt', 'batch2.txt', 'batch3.txt', 'batch4.txt', 'batch5.txt'];",
          "  const contents = await Promise.all(files.map(f => readFile(f)));",
          "  return `Processed ${contents.length} files: ${contents.join(', ')}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Processed 5 files",
            "Content 1",
            "Content 5"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    }
  }
}
