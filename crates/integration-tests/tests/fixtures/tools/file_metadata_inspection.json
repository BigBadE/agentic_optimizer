{
  "name": "File Metadata and Properties Inspection",
  "description": "Tests reading file properties and metadata",
  "tags": [
    "tools",
    "metadata",
    "files"
  ],
  "setup": {
    "files": {
      "data1.txt": "Short",
      "data2.txt": "This is a longer file with more content that spans multiple lines.\nLine 2\nLine 3"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Inspect file properties",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Inspect",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const file1 = await readFile('data1.txt');",
          "  const file2 = await readFile('data2.txt');",
          "  const lines1 = file1.split('\\n').length;",
          "  const lines2 = file2.split('\\n').length;",
          "  return `File1: ${file1.length} bytes, ${lines1} lines | File2: ${file2.length} bytes, ${lines2} lines`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "bytes",
            "lines"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    }
  }
}
