{
  "name": "Rendered Buffer Error Display",
  "description": "Tests that error messages are properly displayed in rendered buffer",
  "tags": [
    "tui",
    "ui",
    "rendering",
    "errors"
  ],
  "setup": {
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Cause an error",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "error",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  throw new Error('Test error message');",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "rendered_buffer_contains": [
            "─── Tasks",
            "─── Input"
          ]
        },
        "execution": {
          "error_occurred": "Test error message"
        }
      }
    }
  ],
  "final_verify": {
    "ui": {
      "tasks_displayed": 1,
      "rendered_buffer_contains": [
        "─── Tasks",
        "─── Input"
      ]
    }
  }
}
