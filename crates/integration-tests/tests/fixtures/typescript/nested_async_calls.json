{
  "name": "Nested Async Function Calls",
  "description": "Tests nested async/await operations and promise chains",
  "tags": [
    "typescript",
    "async",
    "promises",
    "nested"
  ],
  "setup": {
    "files": {
      "level1.txt": "Level 1",
      "level2.txt": "Level 2",
      "level3.txt": "Level 3"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Execute nested async operations",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "nested",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const l1 = await readFile('level1.txt');",
          "  const l2 = await readFile('level2.txt');",
          "  const l3 = await readFile('level3.txt');",
          "  return `${l1} -> ${l2} -> ${l3}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Level 1",
            "Level 2",
            "Level 3"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    }
  }
}
