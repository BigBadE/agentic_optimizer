{
  "name": "File Pattern Matching in Pre-made Workspace",
  "description": "Tests glob pattern matching over rust-project workspace",
  "tags": [
    "context",
    "workspace",
    "patterns"
  ],
  "setup": {
    "workspace": "rust-project",
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "List all source files",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  const result = await requestContext(",
            "    'src/**/*.rs',",
            "    'Need all Rust source files',",
            "    10",
            "  );",
            "  return 'Found Rust source files';",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {}
  }
}