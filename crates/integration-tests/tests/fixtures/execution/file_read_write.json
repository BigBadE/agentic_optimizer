{
  "name": "File Read and Write",
  "description": "Tests reading and writing files",
  "tags": [
    "file_ops",
    "read",
    "write"
  ],
  "setup": {
    "files": {
      "input.txt": "Hello from input"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Read input.txt and create output.txt with uppercase version",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Read input.txt",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const content = await readFile('input.txt');",
          "  const uppercase = content.toUpperCase();",
          "  await writeFile('output.txt', uppercase);",
          "  return `Converted ${content.length} characters to uppercase`;",
          "}"
        ]
      },
      "verify": {
        "files": [
          {
            "path": "output.txt",
            "exists": true,
            "contains": [
              "HELLO FROM INPUT"
            ],
            "not_contains": [
              "hello"
            ]
          }
        ],
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "files": [
      {
        "path": "input.txt",
        "exists": true,
        "contains": [
          "Hello from input"
        ]
      },
      {
        "path": "output.txt",
        "exists": true,
        "contains": [
          "HELLO FROM INPUT"
        ]
      }
    ]
  }
}
