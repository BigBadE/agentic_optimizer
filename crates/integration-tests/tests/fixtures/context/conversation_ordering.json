{
  "name": "Conversation Message Ordering",
  "description": "Tests that conversation messages are maintained in chronological order throughout the system",
  "tags": [
    "context",
    "conversation",
    "ordering"
  ],
  "setup": {
    "files": {
      "src/test.rs": "// Test file"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "First message - create a function",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "First message",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  await writeFile('src/test.rs', 'pub fn first() {}');",
          "  return 'First response - created function';",
          "}"
        ]
      },
      "verify": {
        "files": [
          {
            "path": "src/test.rs",
            "exists": true,
            "contains": [
              "pub fn first"
            ]
          }
        ],
        "execution": {}
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Second message - add another function",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Second message",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const content = await readFile('src/test.rs');",
          "  await writeFile('src/test.rs', content + '\\npub fn second() {}');",
          "  return 'Second response - added second function';",
          "}"
        ]
      },
      "verify": {
        "files": [
          {
            "path": "src/test.rs",
            "exists": true,
            "contains": [
              "pub fn first",
              "pub fn second"
            ]
          }
        ],
        "execution": {}
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Third message - verify order",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Third message",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Third response - I can see our conversation history in order: First, Second, Third';",
          "}"
        ]
      },
      "verify": {
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    },
    "files": [
      {
        "path": "src/test.rs",
        "exists": true,
        "contains": [
          "pub fn first",
          "pub fn second"
        ]
      }
    ]
  }
}