{
  "name": "Error: Tool Undefined",
  "description": "Tests handling when agent code references undefined tools variable",
  "tags": [
    "errors",
    "typescript",
    "tools",
    "edge-cases"
  ],
  "setup": {
    "files": {},
    "env_vars": {
      "MERLIN_FOLDER": "__temp__"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Use undefined tools",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {
          "expected_failure": "tools is not defined"
        }
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  const result = await tools.nonExistentTool('test');",
            "  return result;",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {
      "expected_failure": "tools is not defined"
    }
  }
}
