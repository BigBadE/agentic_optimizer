{
  "name": "TypeScript Callback - File Exists",
  "description": "Test TypeScript callback that validates file existence",
  "tags": [
    "validation",
    "typescript_callback",
    "exit_requirement",
    "file_check"
  ],
  "setup": {
    "files": {},
    "terminal_size": [
      120,
      40
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Create config file",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "files": [
          {
            "path": "app.config.json",
            "exists": true
          }
        ]
      },
      "strategy": {
        "type": "sequence",
        "responses": [
          {
            "typescript": [
              "async function agent_code(): Promise<any> {",
              "  return {",
              "    title: 'Create config file',",
              "    steps: [",
              "      {",
              "        title: 'Create config',",
              "        description: 'Write app.config.json',",
              "        step_type: 'implementation',",
              "        exit_requirement: async () => {",
              "          const exists = await bash('test -f app.config.json && echo exists || echo missing');",
              "          if (!exists.stdout.includes('exists')) {",
              "            throw new Error('app.config.json was not created');",
              "          }",
              "        }",
              "      }",
              "    ]",
              "  };",
              "}"
            ]
          },
          {
            "typescript": [
              "async function agent_code(): Promise<string> {",
              "  const config = { app: 'test-app', version: '1.0.0' };",
              "  await writeFile('app.config.json', JSON.stringify(config, null, 2));",
              "  return 'Created app.config.json';",
              "}"
            ]
          }
        ]
      }
    }
  ],
  "final_verify": {
    "files": [
      {
        "path": "app.config.json",
        "exists": true,
        "contains": [
          "test-app"
        ]
      }
    ]
  }
}
