{
  "name": "TUI Task Deletion With Children",
  "description": "Tests deleting a parent task with children and auto-selection of next task",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "task-parent-1",
          "description": "First parent task"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      }
    },
    {
      "step": 2,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "task-child-1",
          "description": "Child of first task",
          "parent_id": "task-parent-1"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 2
        }
      }
    },
    {
      "step": 3,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "task-child-2",
          "description": "Another child",
          "parent_id": "task-parent-1"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 3
        }
      }
    },
    {
      "step": 4,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "task-parent-2",
          "description": "Second parent task (newer)"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 4
        }
      }
    },
    {
      "step": 5,
      "action": {
        "type": "key_press",
        "data": {
          "key": "Ctrl+t"
        }
      },
      "expectations": {
        "ui_state": {
          "focused_pane": "tasks"
        }
      }
    },
    {
      "step": 6,
      "action": {
        "type": "key_press",
        "data": {
          "key": "up"
        }
      },
      "expectations": {}
    },
    {
      "step": 7,
      "action": {
        "type": "key_press",
        "data": {
          "key": "backspace"
        }
      },
      "expectations": {}
    },
    {
      "step": 8,
      "action": {
        "type": "key_press",
        "data": {
          "key": "backspace"
        }
      },
      "expectations": {}
    },
    {
      "step": 9,
      "action": {
        "type": "wait",
        "data": {
          "duration_ms": 100
        }
      },
      "expectations": {}
    }
  ]
}
