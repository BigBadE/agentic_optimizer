{
  "name": "Cancel Current Work and Queue Input",
  "description": "Tests cancelling in-progress work and queueing new input",
  "tags": [
    "tui",
    "cancel",
    "queue",
    "keyboard"
  ],
  "setup": {
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Long running task",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {},
        "ui": {
          "tasks_displayed": 1
        }
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "Long running",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  return 'Task is running...';",
            "}"
          ]
        }
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Interrupting task",
        "submit": true
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "c"
      },
      "verify": {
        "ui": {}
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {},
        "ui": {}
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "Interrupting",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  return 'Queued task completed';",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "ui": {
      "all_tasks_completed": true
    }
  }
}
