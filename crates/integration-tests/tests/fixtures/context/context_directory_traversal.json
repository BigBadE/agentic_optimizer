{
  "name": "Context Directory Traversal and Filtering",
  "description": "Tests directory traversal with filtering for context building",
  "tags": [
    "context",
    "directory",
    "filtering"
  ],
  "setup": {
    "files": {
      "src/main.rs": "fn main() {}",
      "src/lib.rs": "pub mod utils;",
      "src/utils/helper.rs": "pub fn help() {}",
      "src/utils/mod.rs": "pub mod helper;",
      "tests/integration_test.rs": "#[test] fn test() {}",
      "target/debug/binary": "binary data",
      ".git/config": "git config"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "List source files only",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "source files",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const srcFiles = await listFiles('src');",
          "  return `Found ${srcFiles.length} source files`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "source files"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {}
  }
}
