{
  "name": "Rendered Buffer Basic Verification",
  "description": "Tests basic rendered buffer verification to ensure UI elements are properly displayed",
  "tags": [
    "tui",
    "ui",
    "rendering",
    "buffer"
  ],
  "setup": {
    "files": {
      "test.txt": "Sample content"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Test input text",
        "submit": false
      },
      "verify": {
        "ui": {
          "input_text": "Test input text",
          "rendered_buffer_contains": [
            "─── Input",
            "Test input text",
            "─── Tasks"
          ],
          "rendered_buffer_not_contains": [
            "NonExistentText",
            "InvalidPattern"
          ]
        }
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Read the test file",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Read the test file",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const content = await readFile('test.txt');",
          "  return `File contains: ${content}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "output_contains": [
            "File contains",
            "Sample content"
          ],
          "rendered_buffer_contains": [
            "─── Tasks",
            "─── Input",
            "Sample content"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    },
    "ui": {
      "all_tasks_completed": true,
      "tasks_displayed": 1,
      "rendered_buffer_contains": [
        "─── Tasks",
        "─── Input"
      ]
    }
  }
}
