{
  "name": "Edit Tool Advanced Usage",
  "description": "Tests advanced edit tool features like replace_all and multiple replacements",
  "tags": [
    "tools",
    "edit",
    "file-operations"
  ],
  "setup": {
    "files": {
      "example.txt": "Hello world\nHello again\nHello there"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Replace all Hello with Hi",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "files": [
          {
            "path": "example.txt",
            "contains": [
              "Hi world",
              "Hi again",
              "Hi there"
            ]
          }
        ],
        "ui": {
          "output_contains": [
            "Found 3 instances"
          ]
        },
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  await editFile('example.txt', 'Hello', 'Hi', { replace_all: true });",
            "  const content = await readFile('example.txt');",
            "  const count = (content.match(/Hi/g) || []).length;",
            "  return `Replaced all occurrences. Found ${count} instances of Hi`;",
            "}"
          ]
        }
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Replace single occurrence",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "files": [
          {
            "path": "example.txt",
            "contains": [
              "Greetings world",
              "Hi again"
            ]
          }
        ],
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  await editFile('example.txt', 'Hi world', 'Greetings world');",
            "  const content = await readFile('example.txt');",
            "  return `File now contains: ${content.split('\\n')[0]}`;",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "files": [
      {
        "path": "example.txt",
        "exists": true,
        "contains": [
          "Greetings",
          "Hi"
        ]
      }
    ],
    "execution": {}
  }
}