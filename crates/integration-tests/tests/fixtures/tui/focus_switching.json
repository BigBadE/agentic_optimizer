{
  "name": "Focus Switching Between Panes",
  "description": "Verifies that Tab key switches focus between input, output, and tasks panes",
  "tags": [
    "tui",
    "focus",
    "navigation"
  ],
  "setup": {
    "terminal_size": [
      80,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Create a simple task",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "simple task",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Task completed';",
          "}"
        ]
      },
      "verify": {
        "execution": {}
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Tab"
      },
      "verify": {
        "ui": {
          "focused_pane": "output"
        }
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Tab"
      },
      "verify": {
        "ui": {
          "focused_pane": "input"
        }
      }
    }
  ]
}
