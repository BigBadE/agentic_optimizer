{
  "name": "TUI Save Tasks Workflow",
  "description": "Tests task lifecycle suitable for persistence verification",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "description": "Persistable task 1"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      }
    },
    {
      "step": 2,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_output",
          "text": "Task output that should be saved"
        }
      },
      "expectations": {}
    },
    {
      "step": 3,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_completed",
          "result": "Task saved successfully"
        }
      },
      "expectations": {}
    },
    {
      "step": 4,
      "action": {
        "type": "wait",
        "data": {
          "duration_ms": 100
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      }
    }
  ]
}
