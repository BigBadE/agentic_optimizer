{
  "name": "Task Tree Display",
  "description": "Tests that tasks are displayed correctly in the TUI task pane",
  "tags": [
    "tui",
    "tasks",
    "display"
  ],
  "setup": {
    "files": {},
    "terminal_size": [
      100,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Show me a task tree",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {
          "return_type": "TaskList"
        }
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "Show me a task tree",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<TaskList> {",
            "  return {",
            "    title: 'Parent Task',",
            "    steps: [",
            "      {",
            "        title: 'First Child',",
            "        description: 'First child task',",
            "        step_type: 'implementation'",
            "      },",
            "      {",
            "        title: 'Second Child',",
            "        description: 'Second child task',",
            "        step_type: 'validation'",
            "      }",
            "    ]",
            "  };",
            "}"
          ]
        }
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "First child task",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  return 'First child completed';",
            "}"
          ]
        }
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "Second child task",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  return 'Second child completed';",
            "}"
          ]
        }
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "tab"
      }
    }
  ],
  "final_verify": {}
}
