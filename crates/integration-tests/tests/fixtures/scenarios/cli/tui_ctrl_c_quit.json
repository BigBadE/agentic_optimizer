  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "user_input",
        "data": {
          "text": "Some text",
          "submit": false
        }
      },
      "expectations": {
        "ui_state": {
          "input_text": "Some text"
        }
      }
