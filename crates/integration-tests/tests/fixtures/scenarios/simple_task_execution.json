{
  "name": "simple_task_execution",
  "description": "Tests simple task execution with mock provider",
  "setup": {
    "workspace_files": [
      {
        "path": "test.txt",
        "content": "Hello World"
      }
    ],
    "env_vars": {}
  },
  "steps": [
    {
      "action": {
        "type": "mock_agent_response",
        "data": {
          "pattern": "read",
          "response": "I will read the file test.txt and return its contents: Hello World"
        }
      },
      "expectations": {}
    },
    {
      "action": {
        "type": "wait",
        "data": {
          "duration_ms": 100
        }
      },
      "expectations": {}
    }
  ]
}
