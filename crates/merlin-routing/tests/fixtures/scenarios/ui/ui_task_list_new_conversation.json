{
  "name": "New Conversation Does Not Branch From Previous",
  "description": "Tests that a new conversation starts fresh and doesn't show as a child of previous conversation",
  "config": {
    "terminal_size": [100, 30],
    "enable_vector_cache": false
  },
  "initial_state": {
    "workspace_files": [],
    "existing_tasks": [
      {"description": "Previous conversation", "status": "Completed"}
    ],
    "vector_cache_state": "complete"
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "agent_response",
        "data": {
          "text": "Starting new conversation",
          "tool_calls": [],
          "subtasks": []
        }
      },
      "expectations": {
        "ui_state": {
          "snapshot": "ui_task_list_new_conversation.txt",
          "visible_tasks": [
            {"description": "Starting new conversation", "status": "Running"}
          ]
        }
      }
    }
  ]
}
