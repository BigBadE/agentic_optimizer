{
  "name": "Error: TypeScript Syntax Error",
  "description": "Tests handling of malformed TypeScript code from LLM",
  "tags": [
    "errors",
    "typescript",
    "syntax",
    "edge-cases"
  ],
  "setup": {
    "files": {},
    "env_vars": {
      "MERLIN_FOLDER": "__temp__"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Create a function with syntax error",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {
          "expected_failure": "TypeScript execution failed"
        }
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  return 'Missing semicolon'",
            "  const broken = }",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {
      "expected_failure": "TypeScript execution failed"
    }
  }
}
