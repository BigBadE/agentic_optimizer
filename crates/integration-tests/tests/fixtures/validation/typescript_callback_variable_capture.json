{
  "name": "TypeScript Callback - Variable Capture",
  "description": "Test that exit_requirement arrow function can capture variables from outer scope",
  "tags": ["validation", "typescript_callback", "exit_requirement", "variable_capture"],
  "setup": {
    "files": {},
    "terminal_size": [120, 40]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Create file with specific content",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Create file with specific content",
        "match_type": "exact"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<any> {",
          "  const expectedContent = 'Hello, World!';",
          "  const filename = 'test.txt';",
          "  return {",
          "    title: 'Create File',",
          "    steps: [",
          "      {",
          "        title: 'Write File',",
          "        description: 'Create test.txt with specific content',",
          "        step_type: 'implementation',",
          "        exit_requirement: async () => {",
          "          const content = await readFile(filename);",
          "          if (content !== expectedContent) {",
          "            throw new Error('Content mismatch: expected ' + expectedContent + ', got ' + content);",
          "          }",
          "        }",
          "      }",
          "    ]",
          "  };",
          "}"
        ]
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Create test.txt with specific content",
        "match_type": "exact"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  await writeFile('test.txt', 'Hello, World!');",
          "  return 'Created test.txt';",
          "}"
        ]
      },
      "verify": {
        "files": [
          {
            "path": "test.txt",
            "exists": true,
            "contains": ["Hello, World!"]
          }
        ]
      }
    }
  ],
  "final_verify": {
    "files": [
      {
        "path": "test.txt",
        "exists": true,
        "contains": ["Hello, World!"]
      }
    ]
  }
}
