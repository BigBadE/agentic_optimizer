{
  "name": "File Modification Sequence",
  "description": "Tests sequential file modifications (read-modify-write pattern)",
  "tags": [
    "execution",
    "file-ops",
    "sequence"
  ],
  "setup": {
    "files": {
      "counter.txt": "0"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Increment counter multiple times",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Final value: 3"
          ]
        },
        "files": [
          {
            "path": "counter.txt",
            "exists": true,
            "exact_content": "3"
          }
        ],
        "execution": {}
      },
      "strategy": {
        "type": "once",
        "trigger": {
          "pattern": "Increment",
          "match_type": "contains"
        },
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  let value = parseInt(await readFile('counter.txt'));",
            "  value += 1;",
            "  await writeFile('counter.txt', value.toString());",
            "  value += 1;",
            "  await writeFile('counter.txt', value.toString());",
            "  value += 1;",
            "  await writeFile('counter.txt', value.toString());",
            "  return `Final value: ${value}`;",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "files": [
      {
        "path": "counter.txt",
        "exists": true,
        "exact_content": "3"
      }
    ]
  }
}
