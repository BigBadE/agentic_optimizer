{
  "name": "Rendered Buffer Empty State",
  "description": "Tests that empty state (no tasks) is correctly rendered",
  "tags": [
    "tui",
    "ui",
    "rendering",
    "empty-state"
  ],
  "setup": {
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "",
        "submit": false
      },
      "verify": {
        "ui": {
          "tasks_displayed": 0,
          "focused_pane": "input",
          "rendered_buffer_contains": [
            "─── Input",
            "─── Tasks"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "ui": {
      "tasks_displayed": 0,
      "rendered_buffer_contains": [
        "─── Input",
        "─── Tasks"
      ]
    }
  }
}
