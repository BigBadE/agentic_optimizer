{
  "name": "TUI Task Failed Event",
  "description": "Tests TaskFailed event handling and error display",
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [80, 24]
  },
  "steps": [
    {
      "step": 1,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "description": "Attempt risky operation"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      }
    },
    {
      "step": 2,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_output",
          "text": "Initializing operation..."
        }
      },
      "expectations": {}
    },
    {
      "step": 3,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_output",
          "text": "Encountering issues..."
        }
      },
      "expectations": {}
    },
    {
      "step": 4,
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_failed",
          "error": "Operation failed: connection timeout after 30s"
        }
      },
      "expectations": {}
    },
    {
      "step": 5,
      "action": {
        "type": "wait",
        "data": {
          "duration_ms": 100
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      }
    }
  ]
}
