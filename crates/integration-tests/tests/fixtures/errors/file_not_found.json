{
  "name": "Error: File Not Found",
  "description": "Tests handling when agent tries to read non-existent file",
  "tags": [
    "errors",
    "file-operations",
    "edge-cases"
  ],
  "setup": {
    "files": {},
    "env_vars": {
      "MERLIN_FOLDER": "__temp__"
    },
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Read non-existent file",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "verify": {
        "execution": {
          "expected_failure": "File does not exist"
        }
      },
      "strategy": {
        "type": "once",
        "response": {
          "typescript": [
            "async function agent_code(): Promise<string> {",
            "  const content = await readFile('nonexistent_file.txt');",
            "  return content;",
            "}"
          ]
        }
      }
    }
  ],
  "final_verify": {
    "execution": {
      "expected_failure": "File does not exist"
    }
  }
}
