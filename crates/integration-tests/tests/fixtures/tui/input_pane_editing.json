{
  "name": "Input Pane Text Editing",
  "description": "Tests cursor movement and text editing in the input pane",
  "tags": [
    "tui",
    "input",
    "navigation",
    "editing"
  ],
  "setup": {
    "terminal_size": [
      80,
      30
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Hello",
        "submit": false
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Left"
      },
      "verify": {
        "ui": {}
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Left"
      },
      "verify": {
        "ui": {}
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "X",
        "submit": false
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Right"
      },
      "verify": {
        "ui": {}
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Right"
      },
      "verify": {
        "ui": {}
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Y",
        "submit": false
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Home"
      },
      "verify": {
        "ui": {
          "cursor_position": 0
        }
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "End"
      },
      "verify": {
        "ui": {}
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Backspace"
      },
      "verify": {
        "ui": {}
      }
    },
    {
      "type": "key_press",
      "data": {
        "key": "Enter",
        "modifiers": ["shift"]
      },
      "verify": {
        "ui": {}
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Second line",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": ".*",
        "match_type": "regex"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  return 'Got multi-line input';",
          "}"
        ]
      },
      "verify": {
        "execution": {},
        "ui": {
          "tasks_displayed": 1
        }
      }
    }
  ],
  "final_verify": {
    "execution": {},
    "ui": {
      "all_tasks_completed": true
    }
  }
}
