{
  "name": "File Write Operations",
  "description": "Tests file writing and listing operations",
  "tags": [
    "file_ops",
    "write",
    "list"
  ],
  "setup": {
    "files": {},
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Create a config file with app_name=MyApp, version=2.0",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "Create a config file",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const config = 'app_name=MyApp\\nversion=2.0';",
          "  await writeFile('config.txt', config);",
          "  const files = await listFiles('.');",
          "  return `Created config file. Files: ${files.join(', ')}`;",
          "}"
        ]
      },
      "verify": {
        "execution": {
          "typescript_parsed": true,
          "typescript_executed": true,
          "tools_called": [
            "writeFile",
            "listFiles"
          ]
        },
        "files": [
          {
            "path": "config.txt",
            "exists": true,
            "contains": [
              "app_name=MyApp",
              "version=2.0"
            ],
            "not_contains": []
          }
        ]
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    },
    "files": [
      {
        "path": "config.txt",
        "exists": true,
        "contains": [
          "app_name=MyApp",
          "version=2.0"
        ]
      }
    ]
  }
}
