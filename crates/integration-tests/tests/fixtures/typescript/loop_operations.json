{
  "name": "TypeScript Loop Operations",
  "description": "Tests for loops, while loops, and iteration",
  "tags": [
    "typescript",
    "loops",
    "iteration"
  ],
  "setup": {
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Test loop operations",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "loop",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  let sum = 0;",
          "  for (let i = 1; i <= 10; i++) {",
          "    sum += i;",
          "  }",
          "  const items = [];",
          "  let count = 0;",
          "  while (count < 3) {",
          "    items.push(count);",
          "    count++;",
          "  }",
          "  return `Sum: ${sum}, Items: ${items.join(',')}`;",
          "}"
        ]
      },
      "verify": {
        "ui": {
          "tasks_displayed": 1,
          "output_contains": [
            "Sum: 55",
            "Items: 0,1,2"
          ]
        },
        "execution": {}
      }
    }
  ],
  "final_verify": {
    "execution": {}
  }
}
