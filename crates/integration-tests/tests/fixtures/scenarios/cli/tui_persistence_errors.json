{
  "name": "TUI Persistence Error Handling",
  "description": "Tests error handling in save/load operations",
  "steps": [
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_started",
          "task_id": "task-persist-1",
          "description": "Task to be persisted"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      },
      "step": 1
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_output",
          "task_id": "task-persist-1",
          "output": "Some output to save"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      },
      "step": 2
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_progress",
          "task_id": "task-persist-1",
          "progress": 50
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      },
      "step": 3
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "task_completed",
          "task_id": "task-persist-1",
          "result": "Task completed with state"
        }
      },
      "expectations": {
        "ui_state": {
          "task_count": 1
        }
      },
      "step": 4
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "system_message",
          "level": "error",
          "message": "Failed to save task state: permission denied"
        }
      },
      "expectations": {
        "events": [
          {
            "type": "system_message",
            "level": "error",
            "message": "Failed to save task state: permission denied"
          }
        ]
      },
      "step": 5
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "system_message",
          "level": "warning",
          "message": "Retrying save operation..."
        }
      },
      "expectations": {
        "events": [
          {
            "type": "system_message",
            "level": "warning",
            "message": "Retrying save operation..."
          }
        ]
      },
      "step": 6
    },
    {
      "action": {
        "type": "send_ui_event",
        "data": {
          "type": "system_message",
          "level": "success",
          "message": "Task state saved successfully"
        }
      },
      "expectations": {
        "events": [
          {
            "type": "system_message",
            "level": "success",
            "message": "Task state saved successfully"
          }
        ]
      },
      "step": 7
    }
  ],
  "setup": {
    "workspace_files": [],
    "env_vars": {},
    "terminal_size": [
      80,
      24
    ]
  }
}
