{
  "name": "Bash Tool Integration",
  "description": "Tests agent executor with bash tool for command execution and error handling",
  "tags": [
    "agent",
    "tools",
    "bash"
  ],
  "setup": {
    "files": {},
    "terminal_size": [
      80,
      24
    ]
  },
  "events": [
    {
      "type": "user_input",
      "data": {
        "text": "Run echo hello using bash",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "echo hello",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  const result = await bash('echo hello');",
          "  return `Command output: ${result}`;",
          "}"
        ]
      },
      "verify": {
        "execution": {
          "typescript_executed": true,
          "tools_called": [
            "bash"
          ]
        }
      }
    },
    {
      "type": "user_input",
      "data": {
        "text": "Execute invalid bash command: %%%invalid%%%",
        "submit": true
      }
    },
    {
      "type": "llm_response",
      "trigger": {
        "pattern": "invalid bash command",
        "match_type": "contains"
      },
      "response": {
        "typescript": [
          "async function agent_code(): Promise<string> {",
          "  try {",
          "    const result = await bash('%%%invalid%%%');",
          "    return `Unexpectedly succeeded: ${result}`;",
          "  } catch (error) {",
          "    return `Handled error gracefully: Command failed as expected`;",
          "  }",
          "}"
        ]
      },
      "verify": {
        "execution": {
          "typescript_executed": true
        }
      }
    }
  ],
  "final_verify": {
    "execution": {
      "all_tasks_completed": true
    }
  }
}
